.top-bg{
    width: 100%;
    height: 400rpx;
    background-size: 100% 100%;
    position: relative;
}
.top-bg-date{
    width: 165rpx;
    height: 120rpx;
    position: absolute;
    right: 62rpx;
    bottom: 90rpx;
}
.top-bg-date view:nth-child(1){
    width: 70%;
    font-size: 86rpx;
    margin-top: -13rpx;
    font-weight: bolder;
}
.top-bg-date view:nth-child(2){
    width: 30%;
    font-size: 30rpx; 
}
.top-bg-date view{
    color: #ffffff;
    float: left;
}
.daily-song-con{
    width: 90%;
    height: auto;
    margin: 0 auto;
}