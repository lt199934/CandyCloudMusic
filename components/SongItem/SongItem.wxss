/* components/SongItem/SongItem.wxss */
@import "/static/iconfont/iconfont.wxss";
.recently-item{
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
}
.item-title{
    width: 80%;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    /* 多行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.subhead{
    width: 80%;
    height: 40rpx;
    float: left;
}
.sq{
    width: 30rpx;
    height: 20rpx;
    font-size: 15rpx;
    color: #fe3a3b;
    border: 1rpx #fe3a3b solid;
    text-align: center;
    line-height: 20rpx;
    border-radius: 8rpx;
    margin-top: 5rpx;
    float: left;
}
.sub-name{
    float: left;
    font-size: 25rpx;
    margin-left: 8rpx;
    max-width: 90%;
    /* 多行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.icon-more{
    height: 100rpx;
    width: 10%;
    float: right;
    margin-top: -60rpx;
    font-size: 60rpx;
    line-height: 100rpx;
    text-align: center;
}

.icon-play{
    height: 100rpx;
    width: 10%;
    float: right;
    margin-top: -60rpx;
    font-size: 60rpx;
    line-height: 100rpx;
    text-align: center;
}

